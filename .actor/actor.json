{
    "actorSpecification": 1,
    "name": "open-source-globalizer",
    "title": "The Open Source Globalizer",
    "description": "Translate GitHub documentation (README.md, CONTRIBUTING.md, etc.) into 16+ languages without breaking code blocks. Powered by Lingo.dev AI.",
    "version": "2.0.0",
    "dockerfile": "../Dockerfile",
    "input": "./input_schema.json",
    "storages": {
        "dataset": {
            "actorSpecification": 1,
            "title": "Translation Results",
            "views": {
                "overview": {
                    "title": "üåç Localized Files",
                    "description": "Download your translated documentation files.",
                    "transformation": {
                        "fields": [
                            "file",
                            "language",
                            "status",
                            "word_count",
                            "char_count",
                            "download_url",
                            "preview"
                        ]
                    },
                    "display": {
                        "component": "table",
                        "properties": {
                            "file": {
                                "label": "File",
                                "format": "text"
                            },
                            "language": {
                                "label": "Language",
                                "format": "text"
                            },
                            "status": {
                                "label": "Status",
                                "format": "text"
                            },
                            "word_count": {
                                "label": "Words",
                                "format": "number"
                            },
                            "char_count": {
                                "label": "Characters",
                                "format": "number"
                            },
                            "download_url": {
                                "label": "Download",
                                "format": "link"
                            },
                            "preview": {
                                "label": "Preview",
                                "format": "text"
                            }
                        }
                    }
                }
            }
        }
    }
}