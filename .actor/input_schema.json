{
    "title": "Globalizer Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "repoUrl": {
            "title": "GitHub Repository URL",
            "type": "string",
            "description": "Full URL (e.g., https://github.com/apify/crawlee).",
            "editor": "textfield",
            "prefill": "https://github.com/apify/crawlee"
        },
        "targetLanguages": {
            "title": "Target Languages üåç",
            "type": "array",
            "description": "Select languages to translate into.",
            "editor": "select",
            "prefill": [
                "es",
                "zh"
            ],
            "items": {
                "type": "string",
                "enum": [
                    "es",
                    "fr",
                    "de",
                    "zh",
                    "ja",
                    "pt",
                    "ru",
                    "hi"
                ],
                "enumTitles": [
                    "Spanish",
                    "French",
                    "German",
                    "Chinese",
                    "Japanese",
                    "Portuguese",
                    "Russian",
                    "Hindi"
                ]
            }
        },
        "lingoApiKey": {
            "title": "Lingo.dev API Key üîë",
            "type": "string",
            "description": "Your Lingo.dev API Key. To get one: 1) Visit lingo.dev 2) Sign up / Sign in 3) Go to Dashboard 4) Click 'Developer API' 5) Generate your API Key",
            "editor": "textfield",
            "isSecret": true
        }
    },
    "required": [
        "repoUrl",
        "targetLanguages",
        "lingoApiKey"
    ]
}